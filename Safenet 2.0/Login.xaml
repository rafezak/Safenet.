<UserControl x:Class="Safenet_2._0.SafeNetApp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Safenet_2._0"
             mc:Ignorable="d" 
             Width="450" Height="800"
             d:DesignHeight="450" d:DesignWidth="800">
    
        <Grid>
            <StackPanel>

                <TextBlock Text="Username" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,150,0,0"/>
                <TextBox x:Name="UsernameBox"  HorizontalAlignment="Center" Margin="0,10,0,0" Width="91" Text="" />
                <TextBlock Text="Password" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,0"/>
                <PasswordBox x:Name="PasswordBox"  HorizontalAlignment="Center" Margin="0,10,0,0" Width="90" PasswordChar="*" />
                <Button Content="Login" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,0" Click="Login_Click" />
            </StackPanel>
        </Grid>
</UserControl>
